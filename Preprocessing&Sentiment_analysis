t_values(by='mean') #기사 수, 평균, 표준편차 집계\n","news_sent_calc['count_sq'] = news_sent_calc['count'].apply(lambda x:sqrt(x)) # 제곱근 \n","news_sent_calc['ll'] = news_sent_calc['mean']-(1.96*(news_sent_calc['std']/news_sent_calc['count_sq'])) #신뢰구간(95% 하한)\n","news_sent_calc['ul'] = news_sent_calc['mean']+(1.96*(news_sent_calc['std']/news_sent_calc['count_sq'])) #신뢰구간(95% 상한)\n","news_sent_calc['num_row'] = np.arange(news_sent_calc.shape[0]) #행 번호 삽입\n","news_sent_calc"],"metadata":{"id":"rV-mOEjBXEsk","colab":{"base_uri":"https://localhost:8080/","height":426},"executionInfo":{"status":"ok","timestamp":1650518246191,"user_tz":-540,"elapsed":475,"user":{"displayName":"Yihoon J.","userId":"08723899974979653802"}},"outputId":"645c758e-62ae-40a4-8ec2-04627b57e666"},"execution_count":null,"outputs":[{"output_type":"execute_result","data":{"text/plain":["          count      mean       std   count_sq        ll        ul  num_row\n","press                                                                      \n","khan       3833  0.163780  0.194368  61.911227  0.157627  0.169933        0\n","chosun     3144  0.166801  0.207472  56.071383  0.159549  0.174054        1\n","hani       3149  0.167880  0.198320  56.115951  0.160953  0.174807        2\n","joongang   3299  0.181683  0.213175  57.436922  0.174409  0.188957        3\n","munhwa     2391  0.184381  0.237373  48.897853  0.174867  0.193896        4\n","seoul      2549  0.193636  0.230104  50.487622  0.184703  0.202569        5\n","hankook    2802  0.206880  0.239962  52.933921  0.197995  0.215765        6\n","segye      4312  0.206992  0.217081  65.665821  0.200513  0.213471        7\n","kmib       2656  0.208702  0.222600  51.536395  0.200236  0.217167        8\n","donga      2091  0.225932  0.238977  45.727453  0.215689  0.236175        9\n","naeil      1036  0.270940  0.243413  32.186954  0.256118  0.285762       10"],"text/html":["\n","  <div id=\"df-f190e597-0cc7-4054-8f6d-fed27d8a221f\">\n","    <div class=\"colab-df-cont